{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cli-frontend/*": ["./*"],
      "@cli-frontend-libs/*": ["libs/*"]
    }
  },
  "include": ["generator", "src", "bin"],
  "exclude": [
    "dist/**/*",
    "coverage/**/*",
    "**/node_modules/**/*",
    "packages/toolkit-frontend/schematics_cli/blank/*-files/**/*",
    "packages/toolkit-frontend/*/test/**/*",
    "packages/schematics/*/*/*files/**/*",
    "tests/**/*",
    "tools/**/*",
    "*.test.*",
    "*.spec.*"
  ]
}
